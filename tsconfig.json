{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "allowJs": false,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
    "./types/global.d.ts"
  ]
}
